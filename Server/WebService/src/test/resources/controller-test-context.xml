<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan
            base-package="com.chat.webservice"/>

    <context:component-scan
            base-package="com.chat.dao"/>

    <bean id="userDao" class="com.chat.dao.UserDaoMock"/>

    <bean id="daoFactory" class="com.chat.dao.repository.DaoFactory"/>

    <bean id="authController"
          class="com.chat.webservice.controller.AuthController"/>

    <bean id="authService"
          class="com.chat.webservice.businesslayer.AuthServiceMock"/>

    <bean id="friendsService"
          class="com.chat.webservice.businesslayer.FriendsServiceMock"/>

    <context:annotation-config/>
    <mvc:annotation-driven/>
</beans>